<%= simple_form_for @activity, url: url, local: true, html: { novalidate: true, class: 'needs-validation' }  do |f| %>
<%= f.input :name, required: true %>
<%= f.input :description, as: :text, required: true %>
<%= f.input :schedule, required: true %>
<%= f.input :level %>
<%= f.input :pins %>
<%= f.button :submit, required: true %>
<% end %>
